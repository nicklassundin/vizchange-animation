<!-- extends default--><!DOCTYPE html>
<html>
    {{> head this}}
	<body>
    {{> script this}}
    {{#each acts}}

        {{#each this.audio}}
            <audio id="{{this.id}}" src="{{this.src}}" type="audio/mpeg" controls autoplay></audio>
        {{/each}}

        <div class="content" id={{this.id}}>
            {{#each this.scens}}
                <div id={{this.id}} class="segment">
                    {{> segment parameters=this}}
                </div>
            {{/each}}
            <div id="foter" class="segment">
                <div class="fotnote">
                    {{#each next.redirect}}
                        <a class="button" href="{{this.href}}">{{this.text}}</a>
                    {{/each}}
                </div>
            </div>
            {{#each this.resources}}
                <div class="image-container">
                    {{> resources parameters=this }}
                </div>
            {{/each}}
        </div>
    {{/each}}

    {{> margin}}
	</body>
    {{> footer this}}

</html>
