<div class="header">
    <h1 class="title">{{title}}</h1>
    <div class="menu">
        {{#each menu}}
            <a class="button" href="{{this.href}}">{{this.text}}</a>
        {{/each}}
    </div>
</div>
<div class="captions">
    {{#each text}}
        <p class="caption">
            <strong>
                {{this.header}}
            </strong>
            <br>
            {{this.text}}
        </p>
    {{/each}}
</div>